{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "max-lines": [
            "error",
            {
                "max": 100,
                "skipBlankLines": true,
                "skipComments": true
            }
        ],
        "eqeqeq": [
            "error",
            "smart"
        ],
        "no-empty": "error",
        "no-cond-assign": [
            "error",
            "always"
        ],
        "@typescript-eslint/no-unused-vars": [ "error" ],
        "prettier/prettier": [
            "error",
            {
                "parser": "typescript",
                "semi": false,
                "trailingComma": "none",
                "singleQuote": true,
                "jsxSingleQuote": true,
                "printWidth": 100,
                "tabWidth": 2,
                "semicolons": false,
                "arrowParens": "avoid",
                "endOfLine": "auto"
            }
        ]
    }
}