{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [ "./src/*" ],
      "@/auth/*": [ "./src/app/auth/*" ],
      "@/job/*": [ "./src/app/job/*" ],
      "@/user/*": [ "./src/app/user/*" ],
    },
    "types": [ "vitest/globals" ]
  }
}